{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "api/*": ["src/api/*"],
      "pages/*": ["src/pages/*"],
      "plugins/*": ["src/plugins/*"],
      "assets/*": ["src/assets/*"],
      "modules/*": ["src/modules/*"],
      "components/*": ["src/components/*"],
      "utils/*": ["src/utils/*"],
      "helpers/*": ["src/helpers/*"],
      "services/*": ["src/services/*"],
      "hooks/*": ["src/hooks/*"],
      "axiosConfig": ["src/axios.config"],
      "constants/*": ["src/constants/*"],
      "routes/*": ["src/routes/*"],
      "theme/*": ["src/theme/*"],
      "machines/*": ["src/machines/*"],
      "@type/*": ["src/@type/*"]
    },
    "types": ["vite-plugin-svgr/client"]
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
